    <td><%= establecimiento.domicilio %></td>
    <td>
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle btn-primary" data-toggle="dropdown" href="#">
          Acciones
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Ver', establecimiento %></li>
          <li><%= link_to 'Editar', edit_establecimiento_path(establecimiento) %></li>
          <li><%= link_to 'Eliminar', establecimiento, method: :delete, data: { confirm: 'Seguro desea eliminar?' } %></li>
          </li>
        </ul>
      </div>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'Agregar Establecimiento', new_establecimiento_path, :class => "btn btn-success" %>



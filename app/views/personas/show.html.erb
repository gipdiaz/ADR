<% if can? :manage, Persona %>

<%- model_class = Persona -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombres) %>:</strong></dt>
  <dd><%= @persona.nombres %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellidos) %>:</strong></dt>
  <dd><%= @persona.apellidos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_documento_id) %>:</strong></dt>
  <dd><%= @persona.tipo_documento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nro_documento) %>:</strong></dt>
  <dd><%= @persona.nro_documento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:calle) %>:</strong></dt>
  <dd><%= @persona.calle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nro_calle) %>:</strong></dt>
  <dd><%= @persona.nro_calle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:piso) %>:</strong></dt>
  <dd><%= @persona.piso %></dd>
  <dt><strong><%= model_class.human_attribute_name(:depto) %>:</strong></dt>
  <dd><%= @persona.depto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado_civil_id) %>:</strong></dt>
  <dd><%= @persona.estado_civil %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sexo_id) %>:</strong></dt>
  <dd><%= @persona.sexo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_nacimiento) %>:</strong></dt>
  <dd><%= @persona.fecha_nacimiento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono_contacto) %>:</strong></dt>
  <dd><%= @persona.telefono_contacto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @persona.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:localidad_id) %>:</strong></dt>
  <dd><%= @persona.localidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ingresar_planta) %>:</strong></dt>
  <dd><%= @persona.ingresar_planta %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cant_contratos) %>:</strong></dt>
  <dd><%= @persona.cant_contratos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cant_horas) %>:</strong></dt>
  <dd><%= @persona.cant_horas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cant_cargos_docente) %>:</strong></dt>
  <dd><%= @persona.cant_cargos_docente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cant_cargos_aux) %>:</strong></dt>
  <dd><%= @persona.cant_cargos_aux %></dd>
  <dt><strong><%= model_class.human_attribute_name(:otra_contratacion) %>:</strong></dt>
  <dd><%= @persona.otra_contratacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cual_contratacion) %>:</strong></dt>
  <dd><%= @persona.cual_contratacion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              personas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_persona_path(@persona), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              persona_path(@persona),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<% else %>
    
   <%= flash[:error] = "Usted no está autorizado para ingresar a esta página" %>
   <script type="text/javascript">
     window.location.href="/personas/new"
   </script>
    
<% end %>
<h1>Listing personas</h1>

<table>
  <tr>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Tipo documento</th>
    <th>Nro documento</th>
    <th>Calle</th>
    <th>Nro calle</th>
    <th>Piso</th>
    <th>Depto</th>
    <th>Estado civil</th>
    <th>Sexo</th>
    <th>Fecha nacimiento</th>
    <th>Localidad</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.nombres %></td>
    <td><%= persona.apellidos %></td>
    <td><%= persona.tipo_documento_id %></td>
    <td><%= persona.nro_documento %></td>
    <td><%= persona.calle %></td>
    <td><%= persona.nro_calle %></td>
    <td><%= persona.piso %></td>
    <td><%= persona.depto %></td>
    <td><%= persona.estado_civil_id %></td>
    <td><%= persona.sexo_id %></td>
    <td><%= persona.fecha_nacimiento %></td>
    <td><%= persona.localidad_id %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Seguro desea eliminar?' } %></td>
  </tr>
<% end %>
</table>


<%= form_for @persona, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombres, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombres, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :apellidos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apellidos, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tipo_documento_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :tipo_documento_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nro_documento, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :nro_documento, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :calle, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :calle, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nro_calle, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :nro_calle, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :piso, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :piso, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :depto, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :depto, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estado_civil_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :estado_civil_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sexo_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sexo_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fecha_nacimiento, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fecha_nacimiento, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :localidad_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :localidad_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                personas_path, :class => 'btn' %>
  </div>
<% end %>
